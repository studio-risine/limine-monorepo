generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  createdAt DateTime  @default(now())
  Process   Process[]

  @@map("users")
}

model Process {
  id   String @id @default(uuid())
  name String

  createdAt DateTime   @default(now())
  startedOn DateTime?
  user      User       @relation(fields: [userId], references: [id])
  userId    String
  deadlines Deadline[]

  @@map("processes")
}

model Deadline {
  id   String @id @default(uuid())
  name String

  process   Process @relation(fields: [processId], references: [id])
  processId String

  @@map("deadlines")
}
